use strict;
package esmith;

use Errno;
use esmith::util;

# sql symlink
symlink "/var/www/html/owncloud/sql/owncloud.sql",
    "/etc/e-smith/sql/init/10owncloud.sql";

system ("/sbin/service mysql.init start"); 

my $autoconf = '
<?php
$AUTOCONFIG = array(
  "dbtype"        => "mysql",
  "dbname"        => "owncloud",
  "dbuser"        => "ownuser",
  "dbpass"        => "ownpass",
  "dbhost"        => "localhost",
  "dbtableprefix" => "",
  "adminlogin"    => "admin",
  "adminpass"     => "Nethesis,1234",
  "directory"     => "/var/www/html/owncloud/data",
  "default_language" => "it",
);';

open (FILE, '>/var/www/html/owncloud/config/autoconfig.php');
print FILE $autoconf;
close FILE;

